      <%= f.text_field :content_2 %>
      
      <%= f.label :food_2, '食材２：' %>
      <%= f.text_field :food_2 %>
    </div>
    
    <div class="form-inline mb-3">   
      <%= f.label :content_3, '栄養素３：' %>
      <%= f.text_field :content_3 %>
      
      <%= f.label :content_3, '食材３：' %>
      <%= f.text_field :food_3 %>
    </div>
      
    <div class="form-inline mb-3"> 
      <%= f.label :content_4, '栄養素４：' %>
      <%= f.text_field :content_4 %>
      
