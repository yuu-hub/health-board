      <ul>
        <% search.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="mb-4">
      <%= f.label :condition_name, '症状名 ：' %>
      <%= f.text_field :condition_name %>      
    </div>
    
    <div class="form-inline mb-3">
        
      <%= f.label :content, '栄養素１：' %>
      <%= f.text_field :content %>
  
      <%= f.label :food, '食材１：' %>
      <%= f.text_field :food %>
    </div>
    
    <div class="form-inline mb-3"> 
